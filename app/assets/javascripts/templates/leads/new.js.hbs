<article>
  <h1>
    New Lead
  </h1>
  {{#if showError}}
    <div class="error">
      Leads must have a first and last name
    </div>
  {{/if}}
  <form>
    <fieldset>
      <dl>
        <dt>
          <label>First Name:</label>
          <dd>
            {{view Ember.TextField value=fields.firstName}}
          </dd>
        </dt>
      </dl>
       <dl>
        <dt>
          <label>Last Name:</label>
          <dd>
            {{view Ember.TextField value=fields.lastName}}
          </dd>
        </dt>
      </dl>
       <dl>
        <dt>
          <label> Email:</label>
          <dd>
            {{view Ember.TextField value=fields.email}}
          </dd>
        </dt>
      </dl>
       <dl>
        <dt>
          <label> Phone:</label>
          <dd>
            {{view Ember.TextField value=fields.phone}}
          </dd>
        </dt>
      </dl>
    </fieldset>
  </form>
    <fieldset class="actions">
      <input type='submit' {{action 'createLead'}} value="Create New Lead"></input>
    </fieldset>
</article>


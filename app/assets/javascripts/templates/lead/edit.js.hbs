
<article id="lead">
  <h1>
    {{fullName}}
  </h1>
  <form>
    <fieldset>
      <dl>
        <dt>
          <label for="view.firstName.elementId" >First Name:</label>
        </dt>
        <dd>
          {{view Ember.TextField value=model.firstName viewName="firstName"}}
        </dd>
      </dl>
       <dl>
        <dt>
          <label for="view.lastName.elementId" >Last Name:</label>
        </dt>
         <dd>
          {{view Ember.TextField value=model.lastName viewName="lastName"}}
        </dd>
      </dl>
       <dl>
        <dt>
          <label for="view.email.elementId" >Email :</label>
        </dt>
         <dd>
          {{view Ember.TextField value=model.email viewName="email"}}
        </dd>
      </dl>
       <dl>
        <dt>
          <label for="view.phone.elementId" >Phone:</label>
        </dt>
         <dd>
          {{view Ember.TextField value=model.phone viewName="phone"}}
        </dd>
      </dl>
    </fieldset>
     </form>
    <fieldset class="actions">
      <input type='submit' value='Save Changes' {{action 'saveChanges'}} ></input>
      <a href="#" class="cancel" {{action 'cancel'}}>{{cancel}}</a>
    </fieldset>
</article>



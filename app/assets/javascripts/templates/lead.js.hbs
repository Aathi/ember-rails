{{#unless isEditing}}  
<article id="lead">
    <h1>Leads
      {{fullName}}
      {{#link-to 'lead.edit' model classNames='edit' }}
        Edit Lead
      {{/link-to}}
    
    </h1>
    <p>
      Name:{{fullName}}
    </p>
    <p>
      Email:{{email}}
    </p>
    <p>
      Phone:{{phone}}
    </p>
    <p>
       <label for="view.status.elementId">Status:</label>
        <br/>
          {{view Ember.Select content=App.Lead.STATUSES value=model.status viewName="status" }} 
    </p>
    <p>
       <label for="for=view.notes.elementId">Status:</label>
        <br/>  
          {{view Ember.TextArea value=model.notes viewName="notes"}}  
    </p>
    <p>
      <a class="delete" href="#" {{action 'delete'}}></a>
    </p>
    <input type="submit"  value='Save Changes' {{action 'saveChanges'}}></input>
    {{#if showUnsavedMessage}}
      <div class="unsaved">unsaved changes</div>
    {{/if}}
    {{#if isSaving}}
      <div class="saving">saving...</div>
    {{/if}}    
  </article>
{{/unless}}

{{outlet}}





